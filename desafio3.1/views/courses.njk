{% extends "layout.njk" %}

{% block content %}
<title>Rocketseat - Cursos</title>
{% block head %}

<link rel="stylesheet" href="style.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

<main>
    <section class="cards">
        <div class="card" id="starter">
            <div class="image-container small">
                <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg">
            </div>
            <div class="content">
                <p>5 M칩dulos</p>
                <p>Gr치tis</p>
            </div>
        </div>
        
        <div class="card" id="launchbase">
            <div class="image-container big">
                <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg">
            </div>
            <div class="content">
                <p>10 M칩dulos</p>
                <p>Pago</p>
            </div>
        </div>

        <div class="card" id="gostack">
            <div class="image-container medium">
                <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg">
            </div>
            <div class="content">
                <p>10 M칩dulos</p>
                <p>Pago</p>
            </div>
        </div>
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i> 
            </a>

            <a class="maximize-modal">
                <i class="material-icons">aspect_ratio</i>
            </a>

            <div class="modal-content">
                <iframe src="https://rocketseat.com.br/" frameborder="0"></iframe>
            </div>
        </div>
    </div>
</main>
<script src="script.js"></script>

{% endblock %}