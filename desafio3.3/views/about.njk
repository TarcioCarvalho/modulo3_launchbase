{% extends "layout.njk" %}

{% block content %}

{% block head %}

<link rel="stylesheet" href="/home.css">

{% endblock %}
<main>
    <div class="principal">
        <h1 class="title">{{about.title}}</h1>
        <img class="logo" src="{{about.imgSrc}}" alt="imagem {{about.title}}">
        <p>{{about.description}}</p>
    </div>

    <div class="tecnologias">
        <h2>{{about.techTitle}}</h2>
        <ul>
        {% for tech in about.techs %}
            <li><img class="icon" src="{{tech.icon}}">{{tech.name}}</li>
        {% endfor %}
        </ul>
    </div>

    <div class="redesociais">
        <ul>
            <h2>{{about.linkTitle}}</h2>
            {% for link in about.links%}
            <li><a class="links" target="_blank" href=""><img class="icon" src="{{link.icon}}">{{link.name}}</a></li>
            {% endfor %}
        </ul>
    </div>
</main>

{% endblock %}
