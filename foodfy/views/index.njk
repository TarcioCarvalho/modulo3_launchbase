<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Foody</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1><a href="/"><img src="/assets/logo.png" alt=""></a></h1>
        <ul>
    {% block header %}
            <li><a href="/about">Sobre</a></li>
            <li><a href="/recipes">Receitas</a></li>
    {% endblock %}
        </ul>
    </header>

    <main>
        {% block content %}
        <section class="recipe">
            <div class="recipe-image">
                <img src="{{index.image}}" alt="Imagem da receita">
            </div>
            <div class="recipe-content">
                <h2>{{index.subtitle}}</h2>
                <p>{{index.description}}</p>
            </div>
        </section>

        <h2 class="h2menu">{{index.subtitle2}}</h2>

        <section class="menu">
            {% for recipe in recipes %}
        <div class="card">
            <div class="card-image">
                <img id="card-img" src="{{recipe.image}}">
            </div>
            <div class="card-content">
                <h3 id=card-title>{{recipe.title}}</h3>
                <p id="card-text">{{recipe.author}}</p>
            </div>
        </div>
        {% endfor %}
        </section>
        {% endblock %}
    </main>

    <footer>
        <p>Todos os direitos reservados, receitas Foody</p>
    </footer>
</body>
</html>